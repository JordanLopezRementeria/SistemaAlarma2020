<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/ThemeOverlay.Material.Dark">


    <TextView
        android:id="@+id/titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/titulin"
        android:text="Crear una cuenta"
        android:textSize="30dp"></TextView>

    <EditText
        android:id="@+id/nombre1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo1"
        android:layout_marginTop="30dp"
        android:hint="Nombre" />


    <EditText
        android:id="@+id/contrase침a1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre1"
        android:hint="Contrase침a"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/direccion1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contrase침a1"
        android:hint="Correo electr칩nico" />


    <Button
        android:id="@+id/botonCancelarXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direccion1"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="68dp"
        android:layout_toRightOf="@id/botonAceptarXML"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"

        android:text="CANCELAR"
        android:textColor="@drawable/b1texto"

        />

    <Button
        android:id="@+id/botonAceptarXML"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/direccion1"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="68dp"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        android:text="ACEPTAR"
        android:textColor="@drawable/b1texto"

        />


</RelativeLayout>