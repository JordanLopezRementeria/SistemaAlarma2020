<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copia2"

    android:theme="@android:style/ThemeOverlay.Material.Dark">

    <TextView
        android:id="@+id/titulistar2"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titulin"
        android:text="LISTA INCIDENCIAS"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/roji"
        ></TextView>

    <Spinner
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_margin="20dp"
        android:id="@+id/spinnerlistarraspberrys"
        android:layout_below="@id/titulistar2"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarListarIncidencias"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/negro" />


    <Button
        android:id="@+id/botonVer"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="20dp"
        android:text="VER"
        android:layout_below="@id/spinnerlistarraspberrys"
        android:layout_centerHorizontal="true"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        android:textSize="20dp"
        android:textColor="@color/roji"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recicler2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/botonVer"
        android:layout_marginTop="30dp"
        android:background="#FF0000"
        android:visibility="invisible" />

</RelativeLayout>