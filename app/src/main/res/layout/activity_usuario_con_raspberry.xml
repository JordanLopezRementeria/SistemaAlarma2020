<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/copia2"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/negro" />
    <TextView
        android:id="@+id/titulo11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:visibility="visible"
        android:layout_below="@id/toolbarListarUsuarios"
        android:textColor="@color/blanquito"
        android:text="1ยบ Elige el usuario :"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textSize="20dp"></TextView>
    <ListView
        android:layout_height="350dp"
        android:layout_width="fill_parent"
        android:layout_below="@id/titulo11"
        android:clickable="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:focusable="true"
        android:longClickable="true"
        android:listSelector="@android:color/holo_green_dark"
        android:visibility="visible"
        android:id="@+id/lvasociar" />


    <TextView
        android:id="@+id/titulo12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:layout_below="@id/toolbarListarUsuarios"
        android:textColor="@color/blanquito"
        android:textStyle="bold"
         android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:text="2ยบ Asociale raspberry/es:"
        android:textSize="20dp"></TextView>


    <ListView
        android:layout_marginTop="60dp"
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:visibility="gone"
        android:buttonTint="@android:color/holo_green_dark"

 />

    <ImageView
        android:id="@+id/botonCan1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:visibility="gone"
        android:src="@drawable/cancelar1"
        android:layout_gravity="center_horizontal"


        />



    <ImageView
        android:id="@+id/button"
   android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/aceptar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 />
</LinearLayout>