<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copia2"
    android:theme="@android:style/ThemeOverlay.Material.Dark">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAñadir"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/negro" />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="100dp"
android:layout_below="@id/botonAceptarXML2"
        android:id="@+id/lv"/>

    <TextView
        android:id="@+id/titulo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/titulin"
        android:textColor="@color/roji"
        android:text="AÑADIR UN USUARIO"
        android:textSize="30dp"></TextView>

    <EditText
        android:id="@+id/nombreInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo1"
        android:textColorHint="@color/blanquito"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Nombre" />


    <EditText
        android:id="@+id/contraseñaInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombreInsertar"
        android:textColorHint="@color/blanquito"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Contraseña"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/direccionInsertar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contraseñaInsertar"
        android:textColorHint="@color/blanquito"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Correo electrónico" />
    <Spinner
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/spPais"
        android:layout_below="@id/direccionInsertar"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="38dp" />
    <Spinner
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/spinnerR"
        android:layout_below="@id/spPais"
        android:spinnerMode="dialog"
        android:layout_width="match_parent"
        android:layout_height="38dp" />

    <Button
        android:id="@+id/botonAceptarXML2"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="50dp"
        android:text="AÑADIR"
        android:layout_below="@id/spinnerR"
        android:textSize="20dp"
        android:textColor="@color/roji"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select"
        android:layout_below="@id/lv"
        android:text="Select all"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deselect"
        android:layout_below="@id/select"
        android:text="Deselect all"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deselect"
        android:id="@+id/next"
        android:text="Next activity"/>


</RelativeLayout>