<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"

    tools:context=".MenuAdminApicultor">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <EditText
        android:id="@+id/nombreApiarioXML4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:layout_below="@+id/listView2"
        android:layout_toLeftOf="@id/imagenAñadirXML4"
        android:hint="Nombre Apiario nuevo" />

    <EditText
        android:id="@+id/nombreApicultorXML4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:visibility="invisible"
        android:layout_below="@+id/nombreApiarioXML4"
        android:layout_toLeftOf="@id/imagenAñadirXML4"
        android:hint="Nombre propietario apiario"   ></EditText>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                              " />



    <TextView
        android:id="@+id/titulo3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/titulin"
        android:text="Admin: Gestión de Apiarios"
        android:textSize="30dp"
        />
    <ImageView
        android:id="@+id/imagenAñadirXML4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/titulo3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/mas1_foreground" />
    <ImageView
        android:id="@+id/imagenlistarXML4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/imagenAñadirXML4"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/lista1_foreground" />
    <ImageView
        android:id="@+id/imagenBorrarXML4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/imagenlistarXML4"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/eliminar1_foreground" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/titulo3"
        android:visibility="gone"
        android:hint="Oir incidencia"
        android:minLines="2"
        android:padding="10dp">
        <requestFocus/>
    </EditText>

    <ListView
        android:layout_width="fill_parent"
        android:layout_below="@id/input_text"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/imagenBorrarXML4"
        android:clickable="true"
        android:longClickable="true"
        android:layout_marginLeft="10dp"
        android:focusable="true"

        android:visibility="invisible"
        android:id="@+id/listView2" />

    <Button
        android:id="@+id/cerrarUsuario3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@drawable/b1texto"
        android:layout_centerHorizontal="true"
        android:text="Cerrar sesión"/>

</RelativeLayout>