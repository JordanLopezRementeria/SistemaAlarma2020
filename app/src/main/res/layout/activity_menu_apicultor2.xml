<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"

    tools:context=".MenuApicultor2">
    <include
        android:id="@+id/toolbar2"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/titulo3"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/titulin"
        android:text="Apicultor: Gesti칩n colmenas"
        android:textSize="30dp"
        />


    <ImageView
        android:id="@+id/imagenA침adirXML3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/titulo3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/mas1_foreground" />
    <ImageView
        android:id="@+id/imagenlistarXML3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/imagenA침adirXML3"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/lista1_foreground" />
    <ImageView
        android:id="@+id/imagenverXML3"
        android:layout_width="100dp"
        android:visibility="gone"
        android:layout_height="100dp"
        android:layout_below="@id/imagenlistarXML3"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/mostrar1_foreground" />

    <EditText
        android:id="@+id/input_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:layout_below="@id/titulo3"
        android:visibility="gone"
        android:layout_marginLeft="10dp"
        android:hint="Oir incidencia"
        android:minLines="2"
        android:padding="10dp">
        <requestFocus/>

    </EditText>


    <ImageView
        android:id="@+id/imagenBorrarXML3"
        android:layout_width="100dp"
        android:visibility="invisible"
        android:layout_height="100dp"

        android:layout_below="@id/imagenverXML3"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/eliminar1_foreground" />
    <Button
        android:id="@+id/speak_now"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/titulo3"
        android:visibility="invisible"
        android:layout_marginTop="20dp"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        android:layout_marginLeft="10dp"

        android:textColor="@drawable/b1texto"
        android:layout_toLeftOf="@id/imagenlistarXML3"
        android:text="Escuchar de nuevo"/>
    <ListView
        android:layout_width="fill_parent"
        android:layout_below="@id/titulo3"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toLeftOf="@id/imagenlistarXML3"
        android:clickable="true"
        android:layout_marginLeft="10dp"
        android:focusable="true"
        android:visibility="invisible"
        android:id="@+id/listView" />
    <Button
        android:id="@+id/cerrarUsuario5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible"

        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@drawable/b1texto"
        android:layout_centerHorizontal="true"
        android:text="Cerrar sesi칩n"/>

    <EditText
        android:id="@+id/nombreIncidenciaXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"

        android:visibility="gone"
        android:layout_below="@+id/nombreColmenaXML"
        android:layout_toLeftOf="@id/imagenBorrarXML3"
        android:hint="Escribe incidencia" />
    <EditText
        android:id="@+id/nombreColmenaXML"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:visibility="gone"
        android:layout_below="@+id/titulo3"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@id/imagenBorrarXML3"
        android:hint="Escribe nombre nueva colmena" />

</RelativeLayout>