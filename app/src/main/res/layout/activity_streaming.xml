<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:background="@drawable/copia2"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/negro" />

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/editStreaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titulin"
        android:text="STREAMING EN DIRECTO"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="@color/roji"/>

        <Spinner
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"

            android:id="@+id/spinnerverstreaming"
            android:layout_below="@id/editStreaming"
            android:spinnerMode="dialog"
            android:layout_width="match_parent"
            android:layout_height="38dp" />



    <WebView
        android:layout_below="@id/spinnerverstreaming"
        android:id="@+id/webview"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_width="312dp"
        android:layout_height="300dp" />

    <Button
        android:id="@+id/botonvisualizar"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:text="VISUALIZAR"
        android:layout_below="@id/webview"
        android:layout_centerHorizontal="true"
        android:background="@drawable/b1"
        android:foreground="@drawable/b1"
        android:textSize="20dp"
        android:textColor="@color/roji"
        android:textStyle="bold" />



</RelativeLayout>