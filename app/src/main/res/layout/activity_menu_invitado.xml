<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/copia2"
    tools:context=".MenuInvitado">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarInvitado"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@color/negro" />



    <TextView
        android:id="@+id/titulo99"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/titulin"
        android:text="DESCRIPCIÓN RÁPIDA DE ALARMA"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/roji"
        ></TextView>
    <VideoView
        android:layout_marginTop="50dp"
        android:id="@+id/videoView3"
        android:layout_below="@id/titulo99"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <TextView
        android:id="@+id/textoCorreo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoView3"
        android:textSize="25dp"
        android:layout_margin="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/roji2"
        android:text="¿Deseas saber más?"
        />


</RelativeLayout>